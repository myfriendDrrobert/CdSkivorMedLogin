@model CdSkivorUppgift.Pages.Records.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Record</h4>
    <hr />
    <div class="card text-center" style="width: 18rem;">
        <div class="card-header">
            <h4 class="card-title">@Html.DisplayFor(model => model.Record.AlbumName)</h4>
        </div>
         <div class="card-body">
            
            <h5 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(model => model.Record.ArtistName)</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><h5>Song List</h5></li>
                @foreach (var song in @ViewBag.Titles)
                {
                    <li class="list-group-item">@song</li>
                }
            </ul>
        <div class="card-footer">
            <a class="btn btn-primary"asp-page="./Edit" asp-route-id="@Model.Record?.Id">Edit</a>
            <i class="fa-solid fa-rotate-left"></i> <a class="link-info" asp-page="Index">Back to List</a>
        </div>
  </div>
</div>
