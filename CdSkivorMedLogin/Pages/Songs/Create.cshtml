@page
@model CdSkivorUppgift.Pages.Songs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                
                <select class="form-select" asp-for="Song.RecordId" class ="form-control" asp-items="ViewBag.AlbumName"></select>
                <label asp-for="Song.RecordId" class="control-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Song.Title" class="form-control" placeholder="Title" />
                <label asp-for="Song.Title" class="control-label"></label>
                <span asp-validation-for="Song.Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Song.Length" class="form-control" placeholder="Length" value="00:00"/>
                <label asp-for="Song.Length" class="control-label"></label>
                <span asp-validation-for="Song.Length" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Song.Author" class="form-control" placeholder="Author" />
                <label asp-for="Song.Author" class="control-label"></label>
                <span asp-validation-for="Song.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success my-2 " />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-start">
    <i class="fa-solid fa-rotate-left"></i> <a class="link-info" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
